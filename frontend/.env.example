# Belecure Frontend Environment Configuration
# Copy this file to .env and modify values for your deployment

# =============================================================================
# API CONFIGURATION (Required)
# =============================================================================
VITE_API_URL=http://localhost:3001
VITE_PYTHON_API_URL=http://localhost:5000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_ENV=development
VITE_DEBUG=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# For production deployment:
# VITE_API_URL=https://api.yourdomain.com
# VITE_PYTHON_API_URL=https://ai.yourdomain.com
# VITE_APP_ENV=production
# VITE_DEBUG=false

# For staging deployment:
# VITE_API_URL=https://api-staging.yourdomain.com
# VITE_PYTHON_API_URL=https://ai-staging.yourdomain.com
# VITE_APP_ENV=staging
# VITE_DEBUG=false

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Analytics & Monitoring (uncomment to enable)
# VITE_ENABLE_ANALYTICS=true
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags (uncomment to disable features)
# VITE_ENABLE_AI_ANALYSIS=false
# VITE_ENABLE_3D_VISUALIZATION=false
# VITE_ENABLE_EXPORT_FEATURES=false

# Performance Settings (uncomment to customize)
# VITE_API_TIMEOUT=30000
# VITE_MAX_FILE_SIZE=52428800

# Development Settings (uncomment to customize)
# VITE_DEV_SERVER_PORT=3000
# VITE_DEV_SERVER_HOST=localhost