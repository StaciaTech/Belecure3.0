# FloorPlanTo3D API Environment Configuration
# Copy this file to .env and modify values for your deployment
# This is the EXAMPLE file - create .env with your actual values

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_TESTING=False

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=5000

# For production deployment, change to your server details:
# HOST=your-production-server-ip
# PORT=80

# =============================================================================
# TENSORFLOW CONFIGURATION
# =============================================================================
TF_CPP_MIN_LOG_LEVEL=2

# =============================================================================
# RESOURCE LIMITS & PERFORMANCE
# =============================================================================
MAX_CONTENT_LENGTH=52428800          # 50MB file upload limit
MEMORY_THRESHOLD_MB=4096             # Memory alert threshold (4GB)
REQUEST_TIMEOUT=300                  # Request timeout in seconds (5 minutes)

# =============================================================================
# WORKER CONFIGURATION (Gunicorn)
# =============================================================================
WORKERS=4                            # Number of worker processes
MAX_REQUESTS=100                     # Restart workers after N requests
MAX_REQUESTS_JITTER=20               # Add randomness to worker recycling
WORKER_TIMEOUT=300                   # Worker timeout in seconds
WORKER_CONNECTIONS=1000              # Max connections per worker
BACKLOG=2048                         # Socket backlog

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
WEIGHTS_FOLDER=./weights
WEIGHTS_FILE_NAME=maskrcnn_15_epochs.h5
MODEL_NAME=mask_rcnn_hq

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp,pdf

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# For development - allow all origins
CORS_ORIGINS=*

# For production - specify your frontend domain
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
ACCESS_LOG=access.log
ERROR_LOG=error.log
APP_LOG=app.log
PRODUCTION_LOG=production.log

# =============================================================================
# SSL CONFIGURATION (HTTPS)
# =============================================================================
# Uncomment and configure for HTTPS deployment
# SSL_KEYFILE=server.key
# SSL_CERTFILE=server.crt

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
ENABLE_HEALTH_ENDPOINTS=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_MEMORY_MONITORING=true

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# Set to true for containerized deployments (Docker/Kubernetes)
CONTAINERIZED=false

# Set to true for cloud deployments (AWS/GCP/Azure)
CLOUD_DEPLOYMENT=false

